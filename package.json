{
  "name": "fseh",
  "version": "0.0.0-semantically-released",
  "description": "A minimal Finite State Event Handler for JavaScript",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "watch:test": "npm t -- -w",
    "test": "mocha src/*.test.js",
    "cover": "nyc --reporter=lcov --reporter=text npm t",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/0xfede/fseh.git"
  },
  "keywords": [
    "fsm",
    "finite",
    "state",
    "machine",
    "event",
    "handler",
    "typescript",
    "javascript"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "author": "Federico Pinna <fpinna@vivocha.com> (http://www.vivocha.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/0xfede/fseh/issues"
  },
  "homepage": "https://github.com/0xfede/fseh#readme",
  "devDependencies": {
    "chai": "3.5.0",
    "chai-spies": "0.7.1",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.5",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "2.0.0",
    "mocha": "3.2.0",
    "nyc": "10.1.2",
    "rimraf": "2.5.4",
    "semantic-release": "6.3.2",
    "typescript": "2.1.6"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run build && npm run cover && npm run check-coverage"
    }
  }
}
